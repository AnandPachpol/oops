#include<iostream>
using namespace std;
class time{
	public:
	int hour;
	int sec;
	int min;
};
int main()
{   int sum;
	time t;
	cout<<"enter time\n1.hours?\n";
	cin>>t.hour;
	cout<<"minutes?\n";
	cin>>t.min;
	cout<<"seconds\n";
	cin>>t.sec;
	sum=3600*t.hour+t.min*60+t.sec;
	int a=t.hour;
	int b=t.min;
	int c=t.sec;
	if(a<10 && b<10 && c<10 )
	cout<<"0"<<a<<":0"<<b<<":0"<<c;
	
	else if(a>=10 && b<10 && c<10 )
	cout<<a<<":0"<<b<<":0"<<c;
	
	else if(a>=10 && b>=10 && c<10 )
	cout<<a<<":"<<b<<":0"<<c;
	
	else if(a>=10 && b>=10 && c>=10 )
	cout<<a<<":"<<b<<":"<<c;
	
	else if(a>=10 && b<10 && c>=10 )
	cout<<a<<":0"<<b<<":"<<c;
	
	else if(a<10 && b>=10 && c>=10 )
	cout<<"0"<<a<<":"<<b<<":"<<c;
	
	else if(a<10 && b>=10 && c<10 )
	cout<<"0"<<a<<":"<<b<<":0"<<c;
	
	else if(a<10 && b>=10 && c>=10 )
	cout<<"0"<<a<<":"<<b<<":0"<<c;
	
	else if(a>=10 && b>=10 && c>=10 )
	cout<<a<<":"<<b<<":0"<<c;
	
	else if(a>=10 && b<10 && c>=10 )
	cout<<a<<":0"<<b<<":0"<<c;
	
	cout<<"\n\athe no. of seconds="<<sum;
	return 0;
	
	
	 
}
